<div class="wrapper-task">
  <form action="/tasks/<%= @task.id %>" method="post" class='task-new'>
    <p class="enter-task">Edit task</p>
    <input type="hidden" name="_method" value="PUT" />
    <input type="text" name='task[title]' value="<%= @task.title %>" class="enter-text" id="title2"/><br/>
    <textarea name='task[description]' class="enter-description" id ="description2"><%= @task.description %></textarea><br/>
    <input type='submit' class="enter-submit" value="Submit" disabled="false"/>
  </form>
  <a class="back" href="/tasks"><<</a>
</div>
