<h1 id="task-header"> All Tasks</h1>

<div class="wrapper-table">
  <table id="task-table">
    <caption class="back"><a href="/"><<</a></caption
    <tr><th>Task</td> <th>Description</th></tr>
    <% @tasks.each do |task| %>
      <tr>
        <td id="task-table-task"><a href="/tasks/<%= task.id %>"><%= task.title %></a></td>
        <td><a href="/tasks/<%= task.id %>/edit"><%= task.description %></a></td>
        <td class="no-column" style="border-style:hidden;"><form action="/tasks/<%= task.id %>" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" value="delete" class="delete"/>
        </form></td>
      </tr
      <% end %>
  </table>
</div>
